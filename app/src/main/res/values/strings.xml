    <string name="chatbot_empre_ben">Hi! I\'m Ben, and I\'m here to help generate valuable insights about your employees\' data. Shall we begin?</string>
    <string name="chatbot_empre_anxiety">Anxiety</string>
    <string name="chatbot_empre_anxiety_response">It was identified that 12 employees acutely show the predominant emotion \'anxious\', which indicates consistent signs of anxiety.</string>
    <string name="chatbot_empre_depression">Depression</string>
    <string name="chatbot_empre_depression_response">It was identified that 9 employees show the predominant emotion \'sad\', which may indicate consistent signs of depression.</string>
    <string name="chatbot_empre_burnout">Burnout</string>
    <string name="chatbot_empre_burnout_response">It was identified that 15 employees report extreme fatigue and lack of motivation, which may indicate symptoms of Burnout.</string>

    <!-- TELA: chatbot_func_tree (ENGLISH) -->
    <string name="chatbot_func_ben1">Hi, I\'m Ben! I want to see you always well!</string>
    <string name="chatbot_func_ben2">Shall we have a quick chat?</string>

    <string name="chatbot_func_tree_root_text_1">How can I help</string>
    <string name="chatbot_func_tree_root_text_2">you today?</string>

    <string name="chatbot_func_tree_respiration_text_1">Deep breathing can really help.</string>
    <string name="chatbot_func_tree_respiration_text_2">Inhale for 4s, hold for 4s, exhale for 6s. Repeat 3x.</string>

    <string name="chatbot_func_tree_causes_text_1">Anxiety may come from too many tasks, worries</string>
    <string name="chatbot_func_tree_causes_text_2">or lack of rest. Which applies to you?</string>

    <string name="chatbot_func_tree_breath_game_text_1">Sure! Take a deep breath... hold... and exhale slowly.</string>
    <string name="chatbot_func_tree_breath_game_text_2">Repeat a few times.</string>

    <string name="chatbot_func_tree_motivational_quote_1">Remember: even the longest nights</string>
    <string name="chatbot_func_tree_motivational_quote_2">come to an end. You are stronger than you think!</string>

    <string name="chatbot_func_tree_option_retry">Ask another question</string>

    <!-- Root node options -->
    <string name="chatbot_func_tree_option_anxious">I\'m feeling anxious. What can I do?</string>
    <string name="chatbot_func_tree_anxious_response_1">I\'m sorry you\'re feeling this way.</string>
    <string name="chatbot_func_tree_anxious_response_2">Let\'s try some things together?</string>

    <string name="chatbot_func_tree_option_control_breathing">I want to control my breathing</string>
    <string name="chatbot_func_tree_option_understand_anxiety">Understand why I\'m anxious</string>
    <string name="chatbot_func_tree_option_distract_me">Can you distract me a bit?</string>
    <string name="chatbot_func_tree_option_breath_exercise">I want to breathe</string>
    <string name="chatbot_func_tree_option_motivational_phrase">Hear a motivational quote</string>

    <string name="chatbot_func_tree_distract_text_1">I can show you a breathing exercise</string>
    <string name="chatbot_func_tree_distract_text_2">or share a motivational quote.</string>

    <string name="chatbot_func_tree_option_unmotivated">I\'m unmotivated at work. Is that normal?</string>
    <string name="chatbot_func_tree_unmotivated_text">Yes, it\'s common sometimes. But I\'d like to understand more.</string>

    <string name="chatbot_func_tree_stuck_routine">I feel stuck in a routine</string>
    <string name="chatbot_func_tree_stuck_response">Try changing small habits. Start your day with something you enjoy!</string>

    <string name="chatbot_func_tree_no_purpose">My job feels meaningless</string>
    <string name="chatbot_func_tree_no_purpose_response">Have you thought about all you\'ve achieved? That has value.</string>

    <string name="chatbot_func_tree_mentally_tired">I\'m mentally tired</string>
    <string name="chatbot_func_tree_mentally_tired_response">Your body is asking for a break. Stand up, stretch, and breathe.</string>

    <string name="chatbot_func_tree_overwhelmed">I\'ve been feeling overwhelmed. Is that normal?</string>
    <string name="chatbot_func_tree_overwhelmed_text">You\'re not a machine. If you feel that way, it\'s time to care for yourself.</string>

    <string name="chatbot_func_tree_how_to_know">How do I know if I\'m overwhelmed?</string>
    <string name="chatbot_func_tree_how_to_know_response">Extreme fatigue, insomnia, irritability are common signs.</string>

    <string name="chatbot_func_tree_relieve_stress">What can I do to relieve it?</string>
    <string name="chatbot_func_tree_relieve_stress_response">Split tasks, learn to say \'no\', and prioritize breaks.</string>

    <string name="chatbot_func_tree_talk_to">Who can I talk to?</string>
    <string name="chatbot_func_tree_talk_to_response">Talking to someone you trust is a good start.</string>

    <string name="chatbot_func_tree_want_to_feel_better">I want to feel better, where do I start?</string>
    <string name="chatbot_func_tree_feel_better_text">Great initiative! Tell me how you\'re feeling now.</string>

    <string name="chatbot_func_tree_feeling_sad">Sad</string>
    <string name="chatbot_func_tree_feeling_sad_text_1">It\'s okay to feel sad.</string>
    <string name="chatbot_func_tree_feeling_sad_text_2">Would you like to distract yourself or breathe with me?</string>

    <string name="chatbot_func_tree_feeling_anxious">Anxious</string>
    <string name="chatbot_func_tree_feeling_anxious_response">Let’s breathe together. That usually helps.</string>

    <string name="chatbot_func_tree_feeling_tired">Tired</string>
